{
	"name": "git-branch-wise-session",
	"displayName": "Git Branch-wise Session",
	"description": "Manages Editor Sessions for Each Git Branch",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:git-branch-wise-session.restoreSession",
		"onCommand:git-branch-wise-session.saveSession",
		"onCommand:git-branch-wise-session.clearSession",
		"onCommand:git-branch-wise-session.clearAllSessions"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "git-branch-wise-session.restoreSession",
				"title": "Restore Saved Session for Current Branch"
			},
			{
				"command": "git-branch-wise-session.saveSession",
				"title": "Save Session for Current Branch"
			},
			{
				"command": "git-branch-wise-session.clearSession",
				"title": "Clear Saved Session for Current Branch"
			},
			{
				"command": "git-branch-wise-session.clearAllSessions",
				"title": "Clear All Saved Sessions"
			}
		],
		"configuration": {
			"title": "Git Branch-wise Session",
			"properties": {
				"git-branch-wise-session.shouldAutoRestoreOnBranchSwitches": {
					"type": "boolean",
					"default": true,
					"description": "Restore sessions automatically on Git branch switches."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
